  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask run",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src/api.py"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true
    },
    {
      "name": "Flask devinit",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src/api.py"
      },
      "args": ["devinit"],
      "jinja": true
    }
  ]
}
